<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/imc_info"
            style="@style/DefaultTextView"
            android:text="@string/imc_info"/>

        <EditText
            android:id="@+id/imc_height"
            style="@style/DefaultEditText"
            android:hint="@string/imc_height"/>

        <EditText
            android:id="@+id/imc_weight"
            style="@style/DefaultEditText"
            android:hint="@string/imc_weight" />

        <Button
            android:id="@+id/imc_button"
            style="@style/DefaultButton"
            android:text="@string/imc_button"
            android:backgroundTint="@color/black"/>

    </LinearLayout>

</ScrollView>