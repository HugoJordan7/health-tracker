<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthtracker">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_default"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_default_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthTracker"
        android:screenOrientation="portrait">
        <activity android:name=".feature.references.view.ReferencesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".feature.listCalc.view.ListCalcActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.water.view.WaterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.heartRate.view.HeartRateActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.tmb.view.TmbActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.imc.view.ImcActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".feature.main.view.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".feature.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthTracker.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>